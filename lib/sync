#!/bin/bash

# Import colors from appropriate location
if [ -f "$(dirname "$0")/${APP}-lib/colors" ]; then
    . "$(dirname "$0")/${APP}-lib/colors"
else
    . "$(dirname "$0")/lib/colors"
fi

BIN_PATH="/.local/bin"
# Always check custom bin PATH set first. If not exit.
if ! echo "$PATH" | grep -q "${HOME}${BIN_PATH}"; then
    die "Bin not in path"
fi

# Only run sync if -t or -f is in arguments
if [[ "$*" == *"-t"* ]] || [[ "$*" == *"-f"* ]] || [[ "$*" == *"-p"* ]]; then
    case "$1" in
        "-p")
            info $PATH && exit
            ;;
        "-t")
            # Remove existing app files if they exist
            rm -f "${HOME}${BIN_PATH}/${APP}"
            rm -rf "${HOME}${BIN_PATH}/${APP}-lib"

            # Copy executable directly to bin
            cp "${APP:-comsui}" "${HOME}${BIN_PATH}/"
            chmod +x "${HOME}${BIN_PATH}/${APP:-comsui}"

            # Create app-lib directory and copy all lib files
            mkdir -p "${HOME}${BIN_PATH}/${APP:-comsui}-lib"
            cp lib/* "${HOME}${BIN_PATH}/${APP:-comsui}-lib/"

            info "Synced $APP to ~$BIN_PATH"
            shift
            ;;
        "-f")
            cp "${HOME}${BIN_PATH}/${APP}" ./"$APP"
            cp "${HOME}${BIN_PATH}/${APP}-lib/"* lib/
            info "Pulled $APP from ~$BIN_PATH"
            shift  
            exit 0
            ;;
    esac
else
    info "Skipped sync"
fi
